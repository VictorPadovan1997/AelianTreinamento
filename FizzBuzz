<?php
 
//Foreach Loop de 1 a 100.
foreach(range(1, 100) as $aprendendophp){
    
    //Caso o numero for divisivel por 3 e 5 = Fizz Buzz.
    if($aprendendophp % 3 == 0 && $aprendendophp % 5 == 0){
        echo 'Fizz Buzz';
    } 
    //Se o numero for divisivel por 3 = Fizz.
   if($aprendendophp % 3 == 0){
        echo 'Fizz';
    }
    //Caso o numero for divisivel por 5 = Buzz.
   else($aprendendophp % 5 == 0){
        echo 'Buzz';
    }
}
<?php
 
